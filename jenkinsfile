
pipeline {
    agent any

 tools {
         nodejs 'Nodejs'
      }
    stages {
       stage ('Check Tools Initializing') {
            steps {
                sh' npm install -g @angular/cli'
                sh 'ng --version'
                sh 'node --version'
                sh 'npm -v'
               
                sh ''' echo "Nodejs = ${Nodejs}"
                '''
            }
        }
       stage('Git checkout') {
            steps {
               
             git branch: 'master',url:'https://github.com/mahabaraket/black-dashboard-angular.git'
            }
        }
           stage('Packages Installations') {
            steps {
               sh 'pwd'
              sh 'npm install'
            }
        }
                   stage('BUILD') {
            steps {
              
           echo 'Build'
             sh 'ng build --prod --base-href=/black-dashboard-angular/ && cd dist/black-dashboard-angular && jar -cvf black-dashboard-angular.war *'
            }
        }
      }
      post {
    success { mail to: "mahaa.baraket@gmail.com",
                    subject: "Build sucess",
                    body: "sucess"
             echo 'successful'}
    failure { mail to: "mahaa.baraket@gmail.com",
                    subject: "Build failed",
                    body: "failed"
             echo 'failed'}
  }
}
